<%= form_for @city do |f| %>
  <% if @city.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert" id="error_explanation">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h2><strong><%= pluralize(@city.errors.count, "error") %> prohibited
        this city from being saved:</strong></h2>
      <ul>
        <% @city.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <%= f.label :name, class: "control-label" %><br>
      <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= f.label :short_name, class: "control-label" %><br>
      <%= f.text_field :short_name, class: "form-control" %>
  </div>
  <p>
    <%= f.submit class: 'btn btn-success btn-lg' %>
    <%= link_to 'Back', cities_path, class: 'btn btn-primary btn-lg' %>
  </p>
<% end %>